<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertcial_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertcial_margin"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".UpdateBelum">

    <TextView
        android:layout_marginLeft="3dp"
        android:layout_marginTop="@dimen/activity_vertcial_margin"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update Status Pelaporan : "
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/idlapor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"/>

    <RadioGroup
        android:id="@+id/radiostatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radiobelum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="belum diproses"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radiosedang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sedang diproses" />

        <RadioButton
            android:id="@+id/radioselesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="selesai diproses" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonupdate"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="@drawable/daftar_bg"
        android:text="UPDATE"/>


</LinearLayout>